@using System.Web.Mvc.Html
@using MeterAppBal.Common
@*@model MeterAppEntity.Model.Project*@
@model MeterAppUI.ViewModels.ProjectViewModel
@{
    ViewBag.Title = "Project";
}

<h2>Add Project Technologies</h2>

@using (Html.BeginForm("CreateProjectTechnologies", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" ng-controller="projectTechnologiesController">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Project.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Project.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Technologies", new { @class = "control-label col-md-2" })

            <div class="col-md-8">
                <multiple-autocomplete ng-model="skills" object-property="Name" suggestions-arr="Technologies"></multiple-autocomplete>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
