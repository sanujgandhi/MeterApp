@model MeterAppUI.ViewModels.ClientViewModel
<!DOCTYPE html>
<html lang="en" data-ng-app="MeterApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Cover Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    @*<link href="css/bootstrap.min.css" rel="stylesheet">
        <link href="css/style.css" rel="stylesheet">*@

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,800italic,800,700italic,700,600italic' rel='stylesheet' type='text/css'>

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
@if (Model != null)
{
    <body ng-controller="clientMessagesController" ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.ClientsProject))">

        <!-- Main -->
        <div class="container">
            <div class="row">
                <div class="development-msg margin50">
                    <div class="col-md-3 col-sm-3 col-xs-12" ng-show="projectList">
                        <!-- Left -->
                        <ul class="nav nav-pills nav-stacked side_menu">
                            <li class="search-bar"><input class="form-control" ng-model="projectListSearch" type="text" value="Search Project" /> <span class="glyphicon glyphicon-search"></span></li>
                            <li ng-repeat="x in projectList | filter:projectListSearch" ng-model="projectList" ng-class="{active: $index == 0}"><a ng-click="taskToDeveloper(x)" data-toggle="tab">{{x.ProjectName}}</a></li>
                        </ul>
                    </div><!-- /span-3 -->
                    <div class="col-md-9 col-sm-9 col-xs-12" ng-show="developerList">
                        <div class="task_detail">
                            <!-- Right -->
                            <h1><span>Task Detail</span></h1>
                            <div class="clearfix"></div>
                            <div class="tabbable-panel">
                                <div class="tabbable-line">
                                    <ul class="nav nav-tabs ">
                                        <li ng-repeat="developer in DevelopersList" ng-model="developerList" ng-class="{active: $index == 0}"><a ng-click="SelectedDeveloper(developer)" data-toggle="tab">{{developer.FirstName}} </a></li>
                                    </ul>
                                    <form class="require-validation margin20" id="payment-form">
                                        <div ng-show="moduleslist" class="tab-content">
                                            <div class="tab-pane active" id="tab_default_1">
                                                <div class='form-row col-md-6'>
                                                    <div class='form-group card required'>
                                                        <label class='control-label' ng-model="media.FirstName">Modules</label>
                                                        <select>
                                                            <option ng-model="developerName" ng-repeat="module in media.Module">
                                                                {{module}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                                <div class='form-row col-md-12'>
                                                    <textarea class="form-control" ng-model="textArea" placeholder="Add text here..."></textarea>
                                                </div>
                                                <div class='form-row col-md-2 pull-right'>
                                                    <div class='form-group margin20'>
                                                        <button class='btn btn-primary' ng-click="uploadFile()"> SEND →</button>
                                                    </div>
                                                </div>
                                                <div class='form-row col-md-4'>
                                                    @*<input type="file" file-model="myFile" required>*@
                                                    <input type="file" file-model="myFile" />
                                                    @*<input id="fileupload" type="file" ng-model="files" onchange="angular.element(this).scope().selectFileforUpload(this.files)" name="files" />*@
                                                </div>
                                            </div><!--tab-pane-->
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--/task_detail->
                        </div><!--/col-span-9-->
                    </div>
                </div>
            </div>
        </div>

        <!-- /Main -->
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="js/bootstrap.min.js"></script>*@
    </body>
}
</html>

